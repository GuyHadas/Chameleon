<h1>Listing campaigns</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Competition</th>
      <th>Competition ID </th>
      <th>Campaign Tagline </th>
      <th>Campaign Print </th>
      <th>Campaign Social Media </th>
      <th>Campaign Guerrilla </th>
      <th>Campaign Mobile </th>
      <th>Campaign Online Banner </th>
      <th>Campaign Out of Home </th>
      <th>Campaign Radio </th>
      <th>Campaign Commercial</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campaigns.each do |campaign| %>
      <tr>
        <td><%= campaign.title %></td>
        <td><%= campaign.competition.brandname %></td>
        <td><%= campaign.competition_id %></td>
        <td><%= campaign.campaigntagline %></td>
        <td><%= image_tag campaign.campaignprint.url(:medium) %></td>
        <td><%= image_tag campaign.campaignsocialmedia.url(:medium) %></td>
        <td><%= image_tag campaign.campaignguerrilla.url(:medium) %></td>
        <td><%= image_tag campaign.campaignmobile.url(:medium) %></td>
        <td><%= image_tag campaign.campaignonlinebanner.url(:medium) %></td>
        <td><%= image_tag campaign.campaignoutofhome.url(:medium) %></td>
        <td><%= image_tag campaign.campaignradio.url(:medium) %></td>
        <td><%= video_tag campaign.campaigncommercial.url, controls: true %></td>
        <td><%= link_to 'Show', competition_campaign_path(@competition, campaign) %></td>
        <td><%= link_to 'Edit', edit_competition_campaign_path(@competition, campaign) %></td>
        <td><%= link_to 'Destroy', competition_campaign_path(@competition, campaign), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Campaign', new_competition_campaign_path(@competition) %><br>
<%= link_to 'Back to Competition', competition_path(@competition) %>
