
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


  <div id="registration-form">
    <div class="container">
      <div class="jumbotron">

        <div class="form-group">
          <div class="field">
            <%= f.label "Company/Name" %><br />
            <%= f.text_field :name, autofocus: true, class: "form-control"%>
          </div>
        </div>

        <div class="form-group">
          <div class="field">
            <%= f.label "Email" %><br />
            <%= f.email_field :email, autofocus: true, class: "form-control"%>
          </div>
        </div>

        <div class="form-group">
          <div class="field">
            <%= f.label "Password" %>
            <% if @validatable %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="radio_inline">
            <%= f.label :typeofuser, "Are you a Company?" %>
            <%= f.radio_button :typeofuser, "Company" %><br>
            <%= f.label :typeofuser, "Are you an Advertiser?" %>
            <%= f.radio_button :typeofuser, "Advertiser" %>
          </div>
        </div>

        <div class="text-center">
          <div class="actions">
            <%= f.submit "Sign up", class: "btn btn-default btn-lg" %>
          </div>
        </div>
      <% end %>
      </div>
    </div>
    <br>
