<div id="masonry-container" class="transitions-enabled">
  <% @competitions.each do |competition| %>
    <div class="box panel panel-default">
      <%= link_to image_tag(competition.image.url(:medium)), competition %>
        <div class="panel-body" id="competition-button">
          <h3><%= competition.brandname %></h3><br>
          <%= link_to 'Edit', edit_competition_path(competition), class: "btn btn-md" %>
          <%= link_to 'Destroy', competition, class: "btn btn-md", method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
    </div>
  <% end %>
</div>
<br>
